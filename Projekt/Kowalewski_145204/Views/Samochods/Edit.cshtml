@model Kowalewski_145204.Models.Samochod

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj informacje o samochodzie</h1>

<h4>Samochód</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ProducentID" class="control-label">Marka</label>
                <select asp-for="ProducentID" class="form-control" asp-items="ViewBag.ProducentID"></select>
                <span asp-validation-for="ProducentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label">Model</label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nadwozie" class="control-label"></label>
                <select asp-for="Nadwozie" class="form-control" asp-items="Html.GetEnumSelectList<Nadwozie>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Nadwozie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypSkrzyniBiegow" class="control-label">Skrzynia biegów</label>
                <input asp-for="TypSkrzyniBiegow" class="form-control" />
                <span asp-validation-for="TypSkrzyniBiegow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="control-label"></label>
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
